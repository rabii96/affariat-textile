{% extends "::base.html.twig" %}

{% block title %}Se Connecter{% endblock %}


{% block body %}
    <br>
    <br>

    <div class="form-control" style="width: 40% ; margin-left: 30%; ">
        <h3 style="text-align: center">Connexion</h3>
        <hr>

        {% if errors %}
            <div class="alert alert-danger">
                {% if errors.messageKey=='Invalid credentials.' %}
                    Email ou mot de passe incorrect.
                {% elseif errors.messageKey=='Account is disabled.' %}
                    Confirmer votre email pour pouvoir se connecter.
                {% else %}
                    {{ errors.messageKey }}
                {% endif %}
            </div>
        {% endif %}
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <input type="text" name="_username" id="username" class="form-control" value="{{ username }}"
                       placeholder="Email ou username" required="required">
            </div>

            <div class="form-group">
                <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de paase" required="required">
            </div>
            <button class="btn btn-success btn-block" style="margin-top: 20px; margin-bottom: 10px;">Connexion</button>
        </form>
        <hr>
        <p style="text-align: center; font-size: smaller">
            Vous n'avez pas encore de compte ?
            <a href="{{ path('register') }}" style="color: #3f51b5;">S'inscrire gratuitement</a>
        </p>
    </div>



{% endblock %}
